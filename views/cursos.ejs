<!DOCTYPE html>
<html>
<head>
    <title>Cursos</title>
    <style>
        table { border-collapse: collapse; width: 100%; margin: 20px 0; }
        th, td { border: 1px solid #ddd; padding: 12px; text-align: left; }
        th { background-color: #f2f2f2; }
        .btn { padding: 8px 15px; margin: 5px; text-decoration: none; border-radius: 4px; }
        .btn-editar { background-color: #28a745; color: white; }
        .btn-excluir { background-color: #dc3545; color: white; border: none; cursor: pointer; }
        .btn-novo { background-color: #00ffdd; color: white; padding: 10px 20px; }
    </style>
</head>
<body>
    <h1> Gerenciar Cursos</h1>
    <a href="/" style="margin-right: 20px;">← Voltar</a>
    <a href="/cursos/novo" class="btn btn-novo">+ Novo Curso</a>
 
    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Duração</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% cursos.forEach(curso => { %>
                <tr>
                    <td><%= curso.nome %></td>
                    <td><%= curso.duracao %></td>
                    <td>
                        <a href="/cursos/editar/<%= curso.id %>" class="btn btn-editar">Editar</a>
                        <form action="/cursos/excluir/<%= curso.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-excluir" onclick="return confirm('Tem certeza?')">Excluir</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    
    <% if (cursos.length === 0) { %>
        <p>Nenhum curso foi cadastrado.</p>
    <% } %>
</body>
</html>
 